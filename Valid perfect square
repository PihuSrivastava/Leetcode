class Solution {
public:
    bool isPerfectSquare(long long num) {
        if(num < 2)
        return true;
        int low = 2;
        int high = num/2;
        while( low <= high){
            int mid = low + (high-low)/2;
            int result = mid*mid;
            if( result == num){
                return true;

            }
            else if (result < num)
            { low = mid+1;
            } else 
            high = mid -1;
        }
        return false;
    }
};
